{
  "manifest_version": 3,
  "name": "TweetCat",
  "version": "2.0.1",
  "default_locale": "en",
  "description": "TweetCat: Sort your Twitter feed, filter by custom labels, focus on what matters!",
  "action": {
    "default_popup": "html/dashboard.html",
    "default_icon": {
      "16": "images/logo_16.png",
      "48": "images/logo_48.png",
      "128": "images/logo_128.png"
    }
  },
  "icons": {
    "16": "images/logo_16.png",
    "48": "images/logo_48.png",
    "128": "images/logo_128.png"
  },
  "permissions": [
    "alarms",
    "webNavigation",
    "webRequest",
    "storage",
    "activeTab",
    "tabs",
    "downloads",
    "contextMenus"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://youtube.com/*",
    "https://www.youtube.com/*",
    "*://*.googlevideo.com/*",
    "https://x.com/*",
    "*://x.com/*",
    "https://tweetcat.dessage.xyz/*"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": [
        "js/content.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://youtube.com/*"
      ],
      "js": [
        "js/yt_content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "css/*.css",
        "html/*.html",
        "images/tweetcat.svg",
        "js/injection.js"
      ],
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ]
    },
    {
      "resources": [
        "js/yt_inject.js"
      ],
      "matches": [
        "https://www.youtube.com/*",
        "https://youtube.com/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; frame-src 'none'; base-uri 'self'"
  }
}
